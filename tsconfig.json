{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "target": "es5",
    "strict": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "pretty": true,
    "downlevelIteration": true
  },
  "include": ["src/", "App.tsx", "*.config.js"]
}
